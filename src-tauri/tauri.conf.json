{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "com.cms.content-creator",
  "productName": "CMS Content Creator",
  "version": "1.0.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "CMS Content Creator",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
